{{!< default}}
<div class="content-area custom-page">
    <main class="site-main">
        {{#page}}
            {{> "page-header" noImage=true}}
        {{/page}}

        {{#if @custom.blog_category_navigation }}
            {{> "components/cat-nav" navItem=@custom.blog_category_navigation}}
        {{else}}
            {{> "components/cat-nav"}}
        {{/if}}
        
        <section class="section-container">
            <div class="post-feed{{#match @custom.blog_article_layout "!=" "Minimal"}} expanded{{/match}}{{#match @custom.blog_article_layout "Right thumbnail"}} right-thumbnail{{/match}}{{#match @custom.blog_article_layout "Text-only"}} text-only{{/match}}{{#match @custom.blog_article_layout "Card"}} feed-card kg-grid kg-grid-3col{{/match}} gh-feed container medium">
                {{#foreach posts}}
                    {{> "loop" noDate=false}}
                {{/foreach}}
            </div>
            {{pagination}}
        </section>
    </main>
</div>

{{#contentFor "body_class"}}{{#if next}} paged-next{{/if}}{{#if @member}} logged-in{{/if}}{{/contentFor}}