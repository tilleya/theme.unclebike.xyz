{{{html}}}

<section class="single-cta-wrapper">
    <div class="gradient-mask"></div>
    <div class="single-cta-base">
        {{#has visibility="paid"}}
            <div class="single-cta-title h2">{{t 'This post is for paying subscribers only' }}</div>
            <p class="single-cta-desc">{{t 'Subscribe to continue reading' }}</p>
        {{/has}}
        {{#has visibility="members"}}
            <div class="single-cta-title h2">{{t 'This post is for subscribers only' }}</div>
            <p class="single-cta-desc">{{t 'Subscribe to continue reading' }}</p>
        {{/has}}
        {{#has visibility="tiers"}}
            <div class="single-cta-title h2">This post is for subscribers on the {{tiers}} only</div>
            <p class="single-cta-desc">{{t 'Subscribe to continue reading' }}</p>
            
        {{/has}}
        {{#if @member}}
            <button class="button button-primary" data-portal="account/plans">{{t 'Upgrade now'}}</button>
        {{else}}
            <button class="button button-primary button-post-paid" data-portal="signup">{{t 'Subscribe now'}}</button>
            <br>
            <button class="button-text single-cta-footer" data-portal="signin">{{t 'Already have an account?'}} <strong>{{t 'Sign in'}}</strong></button>
        {{/if}}
    </div>
    
</section>