{{!< default}}

<div class="content-area">
    <main class="site-main">
        {{#author}}
            <section class="taxonomy">
                <header class="single-header kg-canvas">
                    {{#if profile_image}}
                        <div class="taxonomy-media u-placeholder square round">
                            <img class="u-object-fit" src="{{img_url profile_image size="s"}}" alt="{{name}}">
                        </div>
                    {{/if}}
                    <div class="tag-wrapper">
                        {{#if website}}
                            <h1 class="single-title">
                                <a href="{{website}}" target="_blank" rel="noopener noreferrer">{{name}}</a>
                            </h1>
                        {{else}}
                            <h1 class="single-title">{{name}}</h1>
                        {{/if}}

                        {{#if location}}
                            <div class="author-meta">{{location}}</div>
                        {{/if}}

                        <div class="single-excerpt">{{bio}}</div>

                        <div class="share author-social">
                            {{#if website}}
                                <a class="share-link author-social-item"
                                    href="{{website}}" target="_blank" rel="noopener noreferrer">
                                    {{> icons/link}}
                                </a>
                            {{/if}}
                            {{#if facebook}}
                                <a class="share-link author-social-item"
                                    href="https://www.facebook.com/{{facebook}}" target="_blank" rel="noopener noreferrer">
                                    {{> icons/facebook}}
                                </a>
                            {{/if}}
                            {{#if twitter}}
                                <a class="share-link author-social-item"
                                    href="https://twitter.com/{{twitter}}" target="_blank" rel="noopener noreferrer">
                                    {{> icons/twitter}}
                                </a>
                            {{/if}}
                        </div>
                    </div>
                </header>
            </section>
        {{/author}}

        <div class="kg-canvas">
            <div class="post-feed gh-feed{{#match @custom.blog_article_layout "!=" "Minimal"}} expanded{{/match}}{{#match @custom.blog_article_layout "Right thumbnail"}} right-thumbnail{{/match}}{{#match @custom.blog_article_layout "Text-only"}} text-only{{/match}}">
                {{#foreach posts}}
                    {{> "loop"}}
                {{/foreach}}
            </div>

            {{pagination}}

        </div>
        <div class="hidden">{{@custom.excluded_tags}}</div>
    </main>
</div>

{{#contentFor "body_class"}}{{#if next}} paged-next{{/if}}{{#if @site.logo}}{{#if @site.cover_image}} with-alt-header{{/if}}{{/if}}{{/contentFor}}